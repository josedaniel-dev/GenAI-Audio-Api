{
  "template_name": "double_anchor_hybrid_v3_2",
  "version": "v3.2 NDF",
  "description": "Double-anchor phrasing with semantic gap/crossfade control for natural conversational pacing.",

  "segments": [
    {
      "id": "static_1_hey",
      "text": "Hey {name}, it's Luis."
    },
    {
      "id": "static_2_followup",
      "text": "I just wanted to follow up about your"
    },
    {
      "id": "dev_brand",
      "text": "{developer} timeshare."
    },
    {
      "id": "static_3_closing",
      "text": "But I wanted to make sure everything is handled. Thank you."
    }
  ],

  "timing_map": {
    "[(static_1_hey, static_2_followup)]": { "gap_ms": 120, "crossfade_ms": 15 },
    "[(static_2_followup, dev_brand)]":    { "gap_ms": 80,  "crossfade_ms": 20 },
    "[(dev_brand, static_3_closing)]":     { "gap_ms": 140, "crossfade_ms": 25 }
  }
}
